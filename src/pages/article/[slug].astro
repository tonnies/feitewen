---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header';
import NotionBlocks from '../../components/NotionBlocks';
import ArticleCard from '../../components/ArticleCard';
import { getArticleBySlug, getRelatedArticles, TOPICS } from '../../lib/db-fetch';

// Get D1 database from Cloudflare Workers runtime
const db = Astro.locals.runtime.env.DB;

// SSR mode - no getStaticPaths needed
const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/');
}

const article = await getArticleBySlug(db, slug as string);

if (!article) {
  return Astro.redirect('/');
}

const formattedDate = new Date(article.publishDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Fetch related articles based on shared topics
const relatedArticles = await getRelatedArticles(db, slug as string, 3);
---

<Layout title={`${article.title} - Feite Wen`} description={article.excerpt}>
  <Header topics={TOPICS} client:load />

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <!-- Back Button -->
    <a
      href="/"
      class="inline-block mb-6 sm:mb-8 px-3 py-2 sm:px-4 border-2 border-black bg-white brutalist-shadow brutalist-hover uppercase font-bold text-xs sm:text-sm"
    >
      ← Back to All Articles
    </a>

    <!-- Article Header -->
    <article class="border-4 border-black bg-white brutalist-shadow">
      <header class="p-4 sm:p-6 lg:p-8 border-b-4 border-black bg-yellow-100">
        <!-- Topics -->
        {article.topics.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-4 sm:mb-6">
            {article.topics.map((topic) => (
              <a
                href={`/?topic=${encodeURIComponent(topic)}`}
                class="px-2 py-1 sm:px-3 border-2 border-black bg-white text-xs uppercase font-bold hover:bg-[--color-cream] transition-colors break-words"
              >
                {topic}
              </a>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-2xl sm:text-3xl lg:text-5xl font-bold uppercase mb-4 sm:mb-6 leading-tight break-words">
          {article.title}
        </h1>

        <!-- Meta Info -->
        <div class="flex flex-wrap items-center gap-2 sm:gap-4 text-xs sm:text-sm text-[--color-gray] mb-4 sm:mb-6">
          <time class="uppercase font-bold">{formattedDate}</time>
          {article.author.length > 0 && (
            <>
              <span class="hidden sm:inline">•</span>
              <span class="uppercase font-bold break-words">By {article.author.join(", ")}</span>
            </>
          )}
        </div>

        <!-- Excerpt -->
        {article.excerpt && (
          <p class="text-base sm:text-lg leading-relaxed font-bold break-words">
            {article.excerpt}
          </p>
        )}
      </header>

      <!-- Article Content -->
      <div class="p-4 sm:p-6 lg:p-8">
        {article.content && article.content.length > 0 ? (
          <NotionBlocks blocks={article.content} client:load />
        ) : (
          <p class="text-[--color-gray] italic">No content available</p>
        )}
      </div>
    </article>

    <!-- Share/Back Section -->
    <div class="mt-8 sm:mt-12 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <a
        href="/"
        class="px-4 py-2 sm:px-6 sm:py-3 border-4 border-black bg-white brutalist-shadow brutalist-hover uppercase font-bold text-sm sm:text-base"
      >
        ← More Articles
      </a>

      <div class="text-left sm:text-right">
        <p class="text-xs sm:text-sm text-[--color-gray] uppercase">Share this article</p>
      </div>
    </div>

    <!-- Related Articles Section -->
    {relatedArticles.length > 0 && (
      <section class="mt-12 sm:mt-16">
        <div class="mb-6 sm:mb-8">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold uppercase mb-4">Related Articles</h2>
          <div class="h-2 w-24 bg-black"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
          {relatedArticles.map((relatedArticle) => (
            <ArticleCard
              title={relatedArticle.title}
              excerpt={relatedArticle.excerpt}
              publishDate={relatedArticle.publishDate}
              topics={relatedArticle.topics}
              slug={relatedArticle.slug}
              coverImage={relatedArticle.coverImage}
              client:load
            />
          ))}
        </div>
      </section>
    )}
  </main>

  <!-- Footer -->
  <footer class="border-t-4 border-black bg-[--color-cream-dark] mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="text-center">
        <p class="text-sm uppercase font-bold">
          © {new Date().getFullYear()} Feite Wen. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</Layout>
